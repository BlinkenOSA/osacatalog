<% document ||= @document %>
<% lang ||= @lang %>

<% label = render_group_label("context", lang: lang) %>
<% creators_field = render_isad_creators(document, :lang => lang) %>
<% administrativeHistory_field = render_isad_field(document, "administrativeHistory", :lang => lang) %>
<% archivalHistory_field = render_isad_field(document, "archivalHistory", :lang => lang) %>
<% sourceOfAcquisition_field = render_isad_field(document, "sourceOfAcquisition", :lang => lang) %>

<% if creators_field != '' ||
      administrativeHistory_field != '' ||
      archivalHistory_field != '' ||
      sourceOfAcquisition_field != '' %>
  <h4 class="show-page-section"><i class="fa fa-paperclip"></i><%= label %></h4>
  <dl class="dl-horizontal dl-invert data-details">

    <%= creators_field %>
    <%= administrativeHistory_field %>
    <%= archivalHistory_field %>
    <%= sourceOfAcquisition_field %>

  </dl>
<% end %>
