  <h4 class="show-page-section"><i class="fa fa-paperclip"></i>Kapcsolódó anyagokra vonatkozó adatcsoport</h4>
  <dl class="dl-horizontal dl-invert data-details">

    <%= locationOfOriginals_field %>
    <%= locationOfCopies_field %>
    <%= relatedUnits_field %>
    <%= publicationNote_field %>

  </dl>
<% end %>
