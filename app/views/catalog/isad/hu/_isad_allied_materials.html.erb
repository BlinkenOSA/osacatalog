<% document ||= @document %>
<% locationOfOriginals_field = render_related_units(document, "locationOfOriginals", "Existence and location of originals", lang: 'hu') %>
<% locationOfCopies_field = render_related_units(document, "locationOfCopies", "Exitence and location of copies", lang: 'hu') %>
<% relatedUnits_field = render_related_units(document, "relatedUnits", "Related Units", lang: 'hu') %>
<% publicationNote_field = render_isad_field(document, "publicationNote", "Publication note", lang: 'hu') %>

