<% document ||= @document %>
<% subject_display = get_subjects(document.to_marc) %>
<% genre_display = get_genre_subjects(document.to_marc) %>

<% if subject_display || genre_display %>
  <h4 class="show-page-section"><i class="fa fa-tags"></i>Subjects</h4>
  <dl class="dl-horizontal dl-invert data-details">

    <% if subject_display %>
        <%= subject_display %>
    <% end %>

    <% if genre_display %>
        <%= genre_display %>
    <% end %>
  </dl>
<% end %>
