<% document ||= @document %>
<% collection_specific_tags = render_fa_field(document, "collectionSpecificTags", "Collection Specific Tags", cap: false, facet_name: 'subject_facet',  lang: language) %>
<% associated_places = render_fa_associated_places(document, lang: language) %>

<% if collection_specific_tags != ''%>
    <h4 class="show-page-section"><i class="fa fa-globe"></i>Coverage</h4>
    <dl class="dl-horizontal dl-invert data-details">
      <%= collection_specific_tags %>
      <%= associated_places %>
    </dl>
<% end %>
