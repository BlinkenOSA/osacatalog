<% document ||= @document %>
<% rightsAccess_field = render_isad_field(document, "rightsAccess", "Conditions governing access") %>
<% rightsRestrictionReason_field = render_isad_field(document, "rightsRestrictionReason", "Rights restriction reason") %>
<% rightsReproduction_field = render_isad_field(document, "rightsReproduction", "Conditions governing reproduction") %>
<% languages_field = render_isad_field(document, "languages", "Languages") %>
<% physicalCharacteristics_field = render_isad_field(document, "physicalCharacteristics", "Physical characteristics and technical requirements") %>

<% if rightsAccess_field != "" || rightsRestrictionReason_field != "" || rightsReproduction_field != "" || languages_field != "" || physicalCharacteristics_field != "" %>
  <h4 class="show-page-section"><i class="fa fa-copyright"></i>Conditions of access and use</h4>
  <dl class="dl-horizontal dl-invert data-details">

    <%= rightsAccess_field %>
    <%= rightsRestrictionReason_field %>
    <%= rightsReproduction_field %>
    <%= languages_field %>
    <%= physicalCharacteristics_field %>

  </dl>
<% end %>
