<% document ||= @document %>
<% contents_summary = render_fa_contents_summary(document) %>
<% form_genre = render_fa_field(document, "formGenre", "Form/Genre", cap: true, facet_name: "genre_facet") %>
<% physical_description = render_fa_field(document, "physicalDescription", "Physical Description", lang: language) %>
<% physical_condition = render_fa_field(document, "physicalCondition", "Physical Condition", lang: language) %>

<% if form_genre != '' || contents_summary != '' || physical_description != '' || physical_condition != '' %>
  <h4 class="show-page-section"><i class="fa fa-list"></i>Content</h4>
  <dl class="dl-horizontal dl-invert data-details">
    <%= form_genre %>
    <%= contents_summary %>
    <%= physical_description %>
    <%= physical_condition %>
  </dl>
<% end %>
