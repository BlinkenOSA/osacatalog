<% document ||= @document %>
<% archivistsNote_field = render_isad_field(document, "archivistsNote", "Archivist's note") %>
<% rulesConventions_field = render_isad_field(document, "rulesConventions", "Rules or conventions") %>
<% dateCreated_field = render_isad_field(document, "dateCreated", "Created on") %>
<% dateUpdated_field = render_isad_field(document, "dateUpdated", "Updated on") %>
<% descriptionNotes_field = render_isad_field(document, "descriptionNotes", "Description notes") %>

<% if archivistsNote_field != '' ||
      rulesConventions_field != '' ||
      dateCreated_field != '' ||
      dateUpdated_field != '' ||
      descriptionNotes_field != '' %>
  <h4 class="show-page-section"><i class="fa fa-unlock-alt"></i>Description control</h4>
  <dl class="dl-horizontal dl-invert data-details">

    <%= archivistsNote_field %>
    <%= rulesConventions_field %>
    <%= dateCreated_field %>
    <%= dateUpdated_field %>
    <%= descriptionNotes_field %>

  </dl>
<% end %>
