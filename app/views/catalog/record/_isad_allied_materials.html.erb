<% document ||= @document %>
<% locationOfOriginals_field = render_related_units(document, "locationOfOriginals", "Existence and location of originals") %>
<% locationOfCopies_field = render_related_units(document, "locationOfCopies", "Exitence and location of copies") %>
<% relatedUnits_field = render_related_units(document, "relatedUnits", "Related Units") %>
<% publicationNote_field = render_isad_field(document, "publicationNote", "Publication note") %>

<% if locationOfOriginals_field != "" ||
      locationOfCopies_field != "" ||
      relatedUnits_field != "" ||
      publicationNote_field != "" %>

  <h4 class="show-page-section"><i class="fa fa-paperclip"></i>Allied materials</h4>
  <dl class="dl-horizontal dl-invert data-details">

    <%= locationOfOriginals_field %>
    <%= locationOfCopies_field %>
    <%= relatedUnits_field %>
    <%= publicationNote_field %>

  </dl>
<% end %>
