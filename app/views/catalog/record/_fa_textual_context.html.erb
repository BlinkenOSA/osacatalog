<% document ||= @document %>
<% publication_note = render_fa_field(document, "publicationNote", "Publication Note", lang: language) %>
<% associated_names = render_fa_associated_names(document, lang: language) %>

<% if publication_note != ''%>
    <h4 class="show-page-section"><i class="fa fa-paperclip"></i>Context</h4>
    <dl class="dl-horizontal dl-invert data-details">
      <%= publication_note %>
      <%= associated_names %>
    </dl>
<% end %>
