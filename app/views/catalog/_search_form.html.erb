<%= form_tag search_action_url, :method => :get, :class => 'search-form form-inline' do %>
    <%= render_hash_as_hidden_fields(params_for_search().except(:q, :search_field, :qt, :page, :utf8)) %>

    <!--
    <% unless search_fields.empty? %>
        <div class="form-group search_field ">
          <%= select_tag(:search_field, options_for_select(search_fields, h(params[:search_field])), :title => t('blacklight.search.form.search_field.title'), :class=>"form-control") %>
        </div>
    <% end %>
  -->

    <div class="form-group search-input">
        <div class="input-group">
            <%= text_field_tag :q, params[:q], :placeholder => t('blacklight.search.form.search.placeholder'), :class => "search_q q form-control", :id => "q", :autofocus => should_autofocus_on_search_box? %>

            <span class="input-group-btn search_button_span">
                <button type="submit" class="btn btn-danger search_button" id="search">
                    <span class="fa fa-search"></span>
                </button>
            </span>
        </div>
    </div>

<% end %>
